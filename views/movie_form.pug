extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='title') Title:
      input#title.form-control(type='text', placeholder='Name of movie' name='title' required='true' value=(undefined===movie ? '' : movie.title) )
    div.form-group
      label(for='description') Description:
      textarea#description.form-control(type='textarea', placeholder='Description' name='description' required='true') #{undefined===movie ? '' : movie.description}
    div.form-group
      label(for='description') Price:
      input#price.form-control(type='number', placeholder='$' name='price' step='.01' required='true' value=(undefined===movie ? '' : movie.price))
    div.form-group
      label(for='inStock') In Stock:
      input#inStock.form-control(type='number', placeholder='qty' name='inStock' required='true' value=(undefined===movie ? '' : movie.inStock))
    div.form-group
      label Genre:
      div
        for genre in genres
          div(style='display: inline; padding-right:10px;')
            input.checkbox-input(type='checkbox', name='genre', id=genre._id, value=genre._id, checked=genre.checked )
            label(for=genre._id) #{genre.name}
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg